# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/idol_support"

# JWT (⚠️ Must be changed in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Swagger API Documentation
# Set SWAGGER_ENABLED=false to disable in production if needed
SWAGGER_ENABLED=true
# ⚠️ REQUIRED in production! Change these credentials
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=changeme

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Rate Limiting (Applied globally to prevent API abuse)
# THROTTLE_TTL: Time window in seconds
# THROTTLE_LIMIT: Maximum requests allowed within the time window
# Example: 100 requests per 60 seconds = ~1.67 req/sec average
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Storage (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=ap-northeast-2

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
